# 服务配置
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# CORS 配置
CORS_ORIGINS=http://localhost:3000,exp://localhost:8081

# OpenAI API (如果使用)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ASR 配置
ASR_MODEL=whisper
ASR_MODEL_SIZE=base  # tiny, base, small, medium, large
ASR_LANGUAGE=zh  # zh, en, auto

# TTS 配置
TTS_ENGINE=edge-tts
TTS_VOICE=zh-CN-XiaoxiaoNeural  # 中文女声
TTS_RATE=+0%  # 语速调整
TTS_VOLUME=+0%  # 音量调整

# VAD 配置
VAD_THRESHOLD=0.5
VAD_MIN_SILENCE_DURATION=300  # ms
VAD_SPEECH_PAD=30  # ms

# 音频配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# 性能配置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30  # seconds
STREAM_BUFFER_SIZE=4096

# Redis (可选)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# 数据库 (可选)
# DATABASE_URL=sqlite:///./chatai.db
